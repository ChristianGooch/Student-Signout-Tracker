
body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial; margin:18px; background:#f7fafc; color:#0f172a;}
h1{font-size:24px;text-align:center;margin-bottom:12px;}
.controls{display:flex;flex-direction:column;align-items:center;}
select{font-size:20px;padding:10px;margin:8px 0;width:90%;max-width:480px;}
.btn{background:#007BFF;color:white;border:none;border-radius:10px;padding:12px 18px;font-size:18px;cursor:pointer;margin:6px;box-shadow:0 3px 0 rgba(0,0,0,0.08);}
.btn.small{padding:8px 12px;font-size:15px;border-radius:8px;}
.btn:active{transform:translateY(1px);box-shadow:none;}
.footer{display:flex;justify-content:center;margin-top:18px;}
#outList{margin-top:14px;font-size:20px;text-align:center;}
.panel{background:white;padding:12px;border-radius:10px;margin-top:14px;box-shadow:0 6px 18px rgba(2,6,23,0.08);max-width:740px;margin-left:auto;margin-right:auto;}
.hidden{display:none;}
.outBtn {
  background: #dc2626; /* red */
  color: white;
  padding: 20px 40px;   /* make button larger */
  font-size: 20px;      /* bigger text */
  border-radius: 10px;  /* match main buttons */
  cursor: pointer;
}

.outBtn:active {
  background: #b91c1c; /* darker red when tapped */
  transform: translateY(1px); /* optional for press effect */
}



